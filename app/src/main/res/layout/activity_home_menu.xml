<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeMenu">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="0dp"
                android:background="@drawable/homeheader" android:id="@+id/constraintLayout3">

        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="180dp" android:id="@+id/header"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:text="BuSa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView14"
                    android:fontFamily="@font/asap_bold"
                    android:textSize="52sp" android:textStyle="bold" android:textColor="@android:color/white"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
            />
            <TextView
                    android:text="Buku Saku Imunisasi Pintar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:textSize="24sp" android:textStyle="bold" android:textColor="@android:color/white"
                    app:layout_constraintStart_toStartOf="@+id/textView14"
                    android:fontFamily="@font/asap_bold"
                    app:layout_constraintEnd_toEndOf="@+id/textView14" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView14"
                    app:layout_constraintVertical_bias="0.0"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/constraintLayout2" app:layout_constraintTop_toBottomOf="@+id/header">
            <android.support.v7.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout4" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/AboutButton" app:cardElevation="5dp"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:cardCornerRadius="10dp" android:id="@+id/log_out">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:background="@drawable/calendar_background"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout4" tools:layout_editor_absoluteY="256dp"
                        android:id="@+id/Home_Log_out">
                    <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/menu_logout_icon"
                            tools:srcCompat="@drawable/menu_logout_icon"/>
                    <TextView
                            android:text="Keluar Akun"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:textAlignment="center"
                            android:fontFamily="@font/asap_bold" android:layout_marginTop="8dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp" android:id="@+id/Cara_pemakaian"
                    app:layout_constraintTop_toBottomOf="@+id/Informasi"
                    app:layout_constraintStart_toStartOf="@+id/Informasi" app:cardElevation="5dp"
                    android:layout_marginTop="8dp" app:cardCornerRadius="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:background="@drawable/calendar_background"
                        tools:layout_editor_absoluteX="216dp"
                        app:layout_constraintTop_toBottomOf="@+id/Informasi" android:id="@+id/Home_Cara_pemakaian">
                    <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/menu_tutorial_icon"
                            android:id="@+id/imageView5"/>
                    <TextView
                            android:text="Cara Penggunaan \nAplikasi"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center" android:fontFamily="@font/asap_bold"
                            android:layout_marginTop="8dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp" android:id="@+id/AboutButton"
                    app:layout_constraintTop_toBottomOf="@+id/Data_bayi"
                    app:layout_constraintEnd_toEndOf="@+id/Data_bayi" app:cardElevation="5dp"
                    android:layout_marginTop="8dp" app:cardCornerRadius="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:background="@drawable/calendar_background"
                        app:layout_constraintTop_toBottomOf="@+id/Data_bayi"
                        app:layout_constraintEnd_toEndOf="@+id/Data_bayi" android:id="@+id/Home_About">
                    <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/menu_about_icon"
                            android:id="@+id/imageView4"/>
                    <TextView
                            android:text="About\n"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11" android:fontFamily="@font/asap_bold"
                            android:layout_marginTop="8dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_height="140dp" android:id="@+id/Informasi" android:layout_width="140dp"
                    app:cardElevation="5dp" app:layout_constraintStart_toEndOf="@+id/linearLayout4"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="8dp"
                    app:cardCornerRadius="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:background="@drawable/calendar_background"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
                        android:id="@+id/Home_Informasi">
                    <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/menu_info_imunisasi_icon"
                            tools:srcCompat="@drawable/menu_info_imunisasi_icon"/>
                    <TextView
                            android:text="Informasi \nImunisasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center" android:fontFamily="@font/asap_bold"
                            android:layout_marginTop="8dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp" android:id="@+id/Data_bayi"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout4" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginRight="8dp" app:cardElevation="5dp" app:cardCornerRadius="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:background="@drawable/calendar_background"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
                        android:id="@+id/Home_Data_Bayi">
                    <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/menu_data_bayi_icon"
                            android:scaleType="fitCenter"/>
                    <TextView
                            android:text="List \nData Bayi"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:textAlignment="center"
                            android:fontFamily="@font/asap_bold" android:layout_marginTop="8dp"/>
                    "/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout android:layout_width="5dp"
                          android:layout_height="100dp"
                          android:orientation="horizontal" app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                          android:id="@+id/linearLayout4">
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</ScrollView>