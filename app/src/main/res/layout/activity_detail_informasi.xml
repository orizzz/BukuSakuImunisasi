<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Informasi_Imunisasi.DetailInformasi">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical" android:gravity="center" android:padding="8dp"
                      android:paddingBottom="16dp">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Detail_nama_imunisasi"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="24sp"
                    android:textAlignment="viewStart"
                    android:layout_margin="16dp"/>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    android:layout_margin="5dp" android:padding="8dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="Deskirpsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView19"
                            android:fontFamily="sans-serif-medium" android:textSize="24sp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/Detail_Deskripsi"
                            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
                            android:gravity="fill" android:fontFamily="sans-serif-medium"
                            android:lineSpacingExtra="8sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp" app:cardElevation="5dp"
                    android:layout_margin="5dp" android:padding="8dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="Manfaat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView20"
                            android:fontFamily="sans-serif-medium" android:textSize="24sp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/Detail_Manfaat" android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:gravity="fill" android:fontFamily="sans-serif-medium"
                            android:lineSpacingExtra="8sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="16dp"
                    android:padding="8dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="Efek Samping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView21"
                            android:fontFamily="sans-serif-medium" android:textSize="24sp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/Detail_Efek_samping" android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp" android:gravity="fill"
                            android:fontFamily="sans-serif-medium"
                            android:lineSpacingExtra="8sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>