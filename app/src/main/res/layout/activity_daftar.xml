<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginScreen.Daftar">

    <EditText
            android:id="@+id/daftarNama_tv"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:hint="Nama"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="12dp"
            android:inputType="text"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:id="@+id/daftarEmail_tv"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="12dp"
            android:layout_marginTop="8dp"
            android:nextFocusDown="@id/daftarNama_tv"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/daftarNama_tv"/>
    <!--<EditText
            android:id="@+id/daftarTlp_tv"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:hint="Nomor telepon"
            android:inputType="textEmailAddress|number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/daftarEmail_tv"/>-->
    <EditText
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/daftarPass_tv"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Password"
            android:paddingStart="12dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/daftarEmail_tv"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:id="@+id/daftar"
            android:text="Daftar"
            android:layout_width="205dp"
            android:layout_height="72dp"
            android:theme="@style/PrimaryRaisedButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="5dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/daftarPass_tv" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            android:id="@+id/BackButton" android:layout_marginTop="8dp"
            android:theme="@style/PrimaryFlatButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="#fafafa"/>
</android.support.constraint.ConstraintLayout>