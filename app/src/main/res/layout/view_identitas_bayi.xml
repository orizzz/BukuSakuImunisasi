<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="5dp"
        android:clipToPadding="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/Cardview_identitas"
        android:foregroundTint="@color/colorAccent">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/Home_Profil_imageView"
                android:background="@drawable/rounded_select_photo_button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/Home_Profil_imageView"
                android:layout_marginStart="8dp"
                android:id="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="@+id/Home_Profil_imageView"
                app:layout_constraintBottom_toBottomOf="@+id/Home_Profil_imageView">
            <TextView
                    android:text="Nama Bayi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
            />
            <TextView
                    android:text="Tanggal lahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
            />
            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp" android:baselineAligned="false"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/Home_Profil_imageView"
                android:layout_marginStart="120dp"
                app:layout_constraintTop_toTopOf="@+id/linearLayout"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="0.0">
            <TextView
                    android:text="Nama Bayi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Home_NamaBayiView"
                    android:textSize="15sp"
                    android:textStyle="bold"
            />
            <TextView
                    android:text="DD-MM-YYYY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Home_tglLahriView" android:textSize="15sp"
                    android:layout_marginTop="8dp"
            />
            <TextView
                    android:id="@+id/Home_JekelView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp"/>
        </LinearLayout>
        <TextView
                android:text="Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/linearLayout" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.942"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>