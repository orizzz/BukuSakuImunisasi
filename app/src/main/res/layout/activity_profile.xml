<?xml version="1.0" encoding="utf-8"?>
  <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Profile">


    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar2"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/Judul_Toolbar"
            android:text="Page Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toTopOf="@+id/Profil_content"
            app:layout_constraintTop_toTopOf="@+id/toolbar2"
            app:layout_constraintStart_toEndOf="@+id/Profil_backButton"
    />
    <ImageView
            android:id="@+id/Profil_backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/toolbar2"
            app:layout_constraintVertical_bias="0.333" app:layout_constraintStart_toStartOf="@+id/toolbar2"
            android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
            android:tint="@android:color/white"/>
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:itemIconTint="@color/nav_item_color"
            app:itemTextColor="@color/nav_item_color"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/profile_navigation" android:backgroundTint="@android:color/white"/>
    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/navigation" android:id="@+id/Profil_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>